NODE_ENV=development
PORT=3000
API_PREFIX=/api
API_VERSION=1

# CORS (정규식 2개: localhost/127.0.0.1 의 모든 포트 허용)
CORS_ORIGIN=/^http:\/\/localhost(?::\d+)?$/, /^http:\/\/127\.0\.0\.1(?::\d+)?$/
# (만약 브라우저 origin이 http://[::1]:포트 라면 여기도 추가)
# CORS_ORIGIN=/^http:\/\/localhost(?::\d+)?$/, /^http:\/\/127\.0\.0\.1(?::\d+)?$/, /^http:\/\/\[\:\:1\](?::\d+)?$/

# JWT / 보안
JWT_SECRET=dev_change_me
JWT_EXPIRES=7d
BCRYPT_SALT_ROUNDS=10

# DB (개발은 sqlite 권장)
DB_KIND=sqlite
DB_SQLITE_PATH=./data/kumeong.sqlite
DB_SYNC=true
